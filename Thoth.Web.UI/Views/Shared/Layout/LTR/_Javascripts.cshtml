<script>

    var initPickers = function () {
        $('.date-picker').datepicker({
            @*language: '@LanguageHelper.datepickerLanguage()',*@
            rtl: App.isRTL(),
            autoclose: true,
        });

        $(".form_datetime").datetimepicker({
            autoclose: true,
            @*language: '@LanguageHelper.datepickerLanguage()',*@
            isRTL: App.isRTL(),
            format: "dd.mm.yyyy hh:ii"
        });

        $('.timepicker-24').timepicker({
            autoclose: true,
            minuteStep: 5,
            showSeconds: false,
            showMeridian: false,
            defaultTime: '00:00'
        });
    }

    jQuery(document).ready(function () {

        @*$.Select2LanguagedPlaceHolder = "@LanguageHelper.Translate("__SELECT__")";*@
        if ($().select2) {
            $('.form-control.select2me:not(.select2-container):not(.select2-offscreen)').select2({
                @*placeholder: "@LanguageHelper.Translate("__SELECT__")",*@
                allowClear: true,
                width: "100%"
            });
        }

        initPickers();
        InputMask();
        IsMobile();

        // handle input group button click
        $('.timepicker').parent('.input-group').on('click', '.input-group-btn', function (e) {
            e.preventDefault();
            $(this).parent('.input-group').find('.timepicker').timepicker('showWidget');
        });

    });
</script>


